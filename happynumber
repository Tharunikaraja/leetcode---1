int sum_of_squares(int num) {
    int sum = 0;
    while (num != 0) {
        int r = num % 10;  
        sum += r * r;  
        num /= 10;  
    }
    return sum;
}
bool isHappy(int n) {
    int slow, fast;
    slow = n;
    fast = n;

    do {
        slow = sum_of_squares(slow);  
        fast = sum_of_squares(sum_of_squares(fast)); 
        if (fast == 1 || slow == 1) {
            return true;  
        }
    } while (slow != fast);  

    return false; 
}


